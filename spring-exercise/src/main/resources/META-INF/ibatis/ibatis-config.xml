<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMapConfig PUBLIC "-//iBATIS.com//DTD SQL Map Config2.0//EN"
	"http://ibatis.apache.org/dtd/sql-map-config-2.dtd">

<sqlMapConfig>
	<!-- 
		ibaits 환경 설정
			- useStatementNamespaces : 쿼리를 실행할 때 "namespace명.쿼리아이디"의 형식으로 정의해야 한다.
									   template.queryForObject("user.getUserById", id);
	 -->
	<settings useStatementNamespaces="true" />
	
	<!-- 
		VO클래스에 대한 별칭 등록하기
	 -->
	<typeAlias alias="Cart" 		type="kr.co.hta.vo.Cart"/>
	<typeAlias alias="Category" 	type="kr.co.hta.vo.Category"/>
	<typeAlias alias="Event" 		type="kr.co.hta.vo.Event"/>
	<typeAlias alias="Notice" 		type="kr.co.hta.vo.Notice"/>
	<typeAlias alias="Product" 		type="kr.co.hta.vo.Product"/>
	<typeAlias alias="User" 		type="kr.co.hta.vo.User"/>
	
	<!-- 
		매퍼 파일 등록
	 -->
	<sqlMap resource="META-INF/ibatis/mappers/carts.xml" />
	<!-- <sqlMap resource="META-INF/ibatis/mappers/categoris.xml" /> -->
	<sqlMap resource="META-INF/ibatis/mappers/events.xml" />
	<sqlMap resource="META-INF/ibatis/mappers/notices.xml" />
	<sqlMap resource="META-INF/ibatis/mappers/products.xml" />
	<sqlMap resource="META-INF/ibatis/mappers/users.xml" />
</sqlMapConfig>